{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "strict": true,
    "jsx": "react",
    "removeComments": true,
    "target": "es6",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2017", "dom"],
    "newLine": "LF"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
